<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/menu_itembg"
    android:padding="10dp">
    <ImageView
        android:id="@+id/foodPicIv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/foodPicIv"
        android:orientation= "vertical">
        <TextView
            android:id="@+id/foodNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Chicken Noodle Soup"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tasteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/foodNameTv"
            android:text="Soup"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/foodTypeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodNameTv"
            android:layout_marginTop="4dp"
            android:text="Type: Starter"
            android:textColor="#ff5339"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/yclTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#ff5339"
            android:singleLine="true"
            android:maxEms="10"
            android:layout_below="@+id/foodTypeTv"
            android:text="material: chicken,celery,carrot,water,bay leaf, garlic,noodles"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>